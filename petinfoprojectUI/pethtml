  <!-- JavaScript to toggle navbar and load API data -->
  <script>
    // Toggle the mobile navbar
    const hamburger = document.getElementById('hamburger');
    const navMenu = document.getElementById('nav-menu');
    hamburger.addEventListener('click', () => {
      navMenu.classList.toggle('active');
    });
    
    // Function to load pet data from API and display as cards
    async function loadPets() {
      // Replace the URL below with your actual API endpoint
      const apiUrl = "http://<YOUR-EC2-ELASTIC-IP>:8000/api/pets/";
      try {
        const response = await fetch(apiUrl);
        const pets = await response.json();
        const petCardsContainer = document.getElementById('pet-cards');
        petCardsContainer.innerHTML = ""; // Clear existing content
        
        pets.forEach(pet => {
          // Create a card element for each pet
          const card = document.createElement('div');
          card.classList.add('pet-card');
          // Use pet.image_url if available, otherwise a placeholder image
          const imageUrl = pet.image_url || "https://via.placeholder.com/250x150?text=Pet+Image";
          card.innerHTML = `
            <img src="${imageUrl}" alt="${pet.name}">
            <h3>${pet.name}</h3>
            <p>Type: ${pet.pet_type}</p>
            <p>Breed: ${pet.breed}</p>
          `;
          petCardsContainer.appendChild(card);
        });
      } catch (error) {
        console.error("Error loading pet data:", error);
      }
    }
    
    // Load pet data when the page loads and on button click
    document.getElementById('load-more-pets').addEventListener('click', loadPets);
    window.onload = loadPets;
  </script>
